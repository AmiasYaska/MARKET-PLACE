<div id="<%= dom_id product %>" class="p-5 border rounded-lg shadow-md " >

  <div class="grid grid-cols-2 md:grid-cols-4 gap-5 mb-5">
    <% product.images.each do |image| %>
      <div class="rounded-lg border overflow-hidden">
        <%= link_to image_tag(url_for(image), width: 300, height: 300, class: "rounded-lg shadow-md"), image, target: "_blank" %>
      </div>
    <% end %>
  </div>



  <p class="my-3">
    <%= product.title %>
  </p>
  <p class="my-3">
    <%= product.description %>
  </p>
  <p class="my-3">
    <%= product.price %>
  </p>
  <p class="my-3">
    <%= product.category %>
  </p>

  <p class="mt-3">
    <% if current_user != product.user %>
      by <%= product.user.username %>
    <% end %> 
  </p>

  <p class="mt-5">
    <% if current_user != product.user %> 
      <% if current_user.purchased?(product) %>
        <span class="text-green-600 font-medium">Purchased âœ“</span>
      <% else %>
        <div class="mt-3 items-center">
          <%= button_to "Buy", purchases_path(product_id: product.id), method: :post, data: {confirm: "Proceed to payment"}, class:"px-2 py-1 bg-blue-500 rounded-full text-white" %>
        </div>
      <% end %>
    <% end %>
  </p>
  
</div>
