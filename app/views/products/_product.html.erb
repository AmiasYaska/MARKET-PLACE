<div id="<%= dom_id product %>">
  <p class="my-5">
    <%= product.title %>
  </p>
  <p class="my-5">
    <%= product.description %>
  </p>
  <p class="my-5">
    <%= product.price %>
  </p>
  <p class="my-5">
    <%= product.category %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Images:</strong>
    <% product.images.each do |image| %>
      <div><%= link_to image.filename, image %></div>
    <% end %>
  </p>
</div>
