<div class="flex justify-center py-12 md:py-16">
  <div class="md:w-2/3 w-full">

    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @product %>

    <% if current_user == @product.user %>
      <%= link_to "Edit this product", edit_product_path(@product), class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to "Delete product", @product, method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
      </div>
    <% end %>
    
  </div>
</div>