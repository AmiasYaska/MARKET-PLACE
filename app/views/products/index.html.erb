<div class="w-full pb-16">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div id="products" class="grid grid-cols-2 md:grid-cols-4 gap-5">
    <% if @products.any? %>
      <% @products.each do |product| %>
        <div class="border rounded-lg">
          <div class="m-3">
            <%= link_to product.title, product, class:"text-xl " %>
          </div>
          <% if product.images.any? %>
            <%= link_to product do %>
              <%= image_tag product.images.first, class:"w-full h-48 rounded-md" %>
            <% end %>
          <% end %>
          <div class="m-3 items-center">
            <%= link_to product.price, product, class:"text-lg" %>
          </div>
          <div class="m-3 items-center">
            <%= link_to product.user.username, product, class:"text-lg" %>
          </div>
          <%# Purchase Button%>
          
          <% if user_signed_in? && current_user != product.user %>
            <div class="mt-3">
              <%= button_to "Buy", purchases_path(product_id: product.id), method: :post, data: {confirm: "Proceed to payment"}, class:"px-2 py-1 bg-gray-500 text-white" %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No products found.</p>
    <% end %>
  </div>
</div>
